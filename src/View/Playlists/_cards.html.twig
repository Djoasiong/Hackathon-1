<main class="container mt-5 mb-5">
	{% for playlist in playlists %}
	<div class="card w-60 my-4">
		<a class="text-decoration-none" href="playlist?id={{playlist.id}}">
			<div class="row g-0 homeCard">
				<div class="col-md-4 ">
					<img src="{{ playlist.picture_big }}" class="imageCardHome img-fluid rounded-start" alt="categories">
				</div>
				<div class="col-md-8 align-self-center">
					<h3 name="{{ playlist.name }}" class="card-title text-dark text-justify m-3">{{ playlist.title }}
					</h3>
				</div>
			</div>
		</a>
	</div>
	{% endfor %}
</main>